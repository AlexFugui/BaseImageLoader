<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="BaseImageView">
        <attr name="url" format="string" />
        <attr name="placeholder" format="reference" />
        <attr name="errorPic" format="reference" />
        <attr name="isCrossFade" format="boolean" />
        <attr name="isCenterCrop" format="boolean" />
        <attr name="isCircle" format="boolean" />
        <attr name="topRightRadius" format="dimension" />
        <attr name="topLeftRadius" format="dimension" />
        <attr name="bottomRightRadius" format="dimension" />
        <attr name="bottomLeftRadius" format="dimension" />
        <attr name="radius" format="dimension" />
        <attr name="cacheStrategy" format="enum">
            <enum name="ALL" value="0" />
            <enum name="NONE" value="1" />
            <enum name="RESOURCE" value="2" />
            <enum name="DATA" value="3" />
            <enum name="AUTOMATIC" value="3" />
        </attr>
    </declare-styleable>
</resources>